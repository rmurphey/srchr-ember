<div class="component results">
  <ul class="nav nav-tabs">
    <li class="active js-all-filter"><a>All Results <span class="js-all-count badge">0</span></a></li>
    <li class="js-video-filter"><a>Videos <span class="js-video-count badge">0</span></a></li>
    <li class="js-image-filter"><a>Images <span class="js-image-count badge">0</span></a></li>
    <li class="js-twitter-filter"><a>Twitter <span class="js-twitter-count badge">0</span></a></li>
  </ul>

  {{#if controller.length}}
    <section>
    {{#each result in controller}}
    <div class="result {{result.type}}">
      <div class="row-fluid">
        <div class="span2">
          <img {{bindAttr src="result.thumb"}} width="100">
        </div>
        <div class="span9">
          {{#if result.title}}
          <h3><a href="{{result.link}}">{{result.title}}</a></h3>
          {{else}}
          <p><a href="{{result.link}}">view original</a></p>
          {{/if}}
          <p>{{result.content}}</p>
        </div>
        <div class="span1"><i class="{{result.icon}}"></i></div>
      </div>
      <hr>
    </div>
    {{/each}}
  {{else}}
  <section>Loading ...</section>
  {{/if}}
</div>


